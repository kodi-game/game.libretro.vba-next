<?xml version="1.0" encoding="UTF-8"?>
<addon id="game.libretro.vba-next"
		name="Nintendo - Game Boy Advance (VBA Next)"
		version="1.0.2.36"
		provider-name="Forgotten, VBA-M Team, Squarepusher">
	<requires>
		<import addon="game.libretro" version="1.0.0"/>
		<import addon="game.controller.gba" version="1.0.0"/>
	</requires>
	<extension point="kodi.gameclient"
			library_@PLATFORM@="@LIBRARY_FILENAME@">
		<platforms>Game Boy Advance</platforms>
		<extensions>gba</extensions>
		<supports_vfs>true</supports_vfs>
		<supports_standalone>false</supports_standalone>
		<requires_opengl>false</requires_opengl>
	</extension>
	<extension point="xbmc.addon.metadata">
		<license>GPLv2</license>
		<platform>@PLATFORM@</platform>
		<source>https://github.com/kodi-game/game.libretro.vba-next</source>
		<assets>
			<icon>resources/icon.png</icon>
			<screenshot>resources/screenshot-01.jpg</screenshot>
			<screenshot>resources/screenshot-02.jpg</screenshot>
			<screenshot>resources/screenshot-03.jpg</screenshot>
		</assets>
		<summary lang="da_DK">Nintendo - Game Boy Advance (VBA Next)</summary>
		<summary lang="en_GB">Nintendo - Game Boy Advance (VBA Next)</summary>
		<summary lang="es_ES">Nintendo - Game Boy Advance (VBA Next)</summary>
		<summary lang="zh_CN">任天堂 - Game Boy Advance (VBA Next)</summary>
		<description lang="da_DK">VBA-Next er en fork af det nu inaktive VisualBoy Advance-projekt, med mål om at forbedre emulatorens kompatibilitet og funktioner.</description>
		<description lang="de_DE">VBA-Next ist ein Fork des mittlerweile nicht mehr aktiven VisualBoy-Advance-Projekts, mit dem Ziel, die Kompatibilität und die Funktionen des Emulators zu verbessern.</description>
		<description lang="en_GB">VBA-Next is a fork from the now inactive VisualBoy Advance project, with goals to improve the compatibility and features of the emulator.</description>
		<description lang="es_ES">VBA-Next es una bifurcación del ahora inactivo proyecto VisualBoy Advance, con el objetivo de mejorar la compatibilidad y las características del emulador.</description>
		<description lang="zh_CN">VBA-Next 是现在不活跃的 VisualBoy Advance 项目的一个分支，其目标是改进模拟器的兼容性和功能。</description>
	</extension>
</addon>
